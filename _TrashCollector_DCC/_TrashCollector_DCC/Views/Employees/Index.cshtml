@model _TrashCollector_DCC.Models.EmployeeViewModel

@{
    ViewBag.Title = "Index";
}





@using (Html.BeginForm("index", "Employees"))
{
    <div class="search">
        <input type="search" name="search"><button type="submit">Search by Day</button>
    </div>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.customer.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customer.LastName)
        </th>
        <th>
             PickUp Day
        </th>

      
        <th>
            @Html.DisplayNameFor(model => model.customer.Zip)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.customers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeeklyPickUpDay)
            </td>

            
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>

            <td>
                @Html.ActionLink("More Info", "Charge", "Employees", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" } )
                @*@Html.ActionLink("More Info", "Details", "Customers", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" } )*@ 


            </td>
        </tr>
    }

</table>
