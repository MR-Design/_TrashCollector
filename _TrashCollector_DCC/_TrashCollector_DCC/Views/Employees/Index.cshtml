@model _TrashCollector_DCC.Models.EmployeeViewModel

@{
    ViewBag.Title = "Index";
}





@using (Html.BeginForm("index", "Employees"))
{
    <div class="search">
        <input type="search" name="search"><button type="submit">Search by Day</button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.customer.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customer.LastName)
        </th>
        <th>
            Weekly PickUp Day
        </th>

        <th>
            @Html.DisplayNameFor(model => model.customer.Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customer.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customer.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customer.Zip)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.customers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeeklyPickUpDay)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })

            </td>
        </tr>
    }

</table>
