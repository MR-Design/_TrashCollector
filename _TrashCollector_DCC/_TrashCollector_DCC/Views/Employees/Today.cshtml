@model _TrashCollector_DCC.Models.CustomerViewModel



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<button class="btn-danger btn-lg"> Emoployee Platform</button>


<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AllCustomers.FirstName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.AllCustomers.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllCustomers.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllCustomers.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllCustomers.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllCustomers.ZipCode)
        </th>

    </tr>


    @foreach (var item in Model.CustomersList)
    {
        @*foreach (var days in Model.CustomersInfoList)
            {


                @Html.DisplayFor(modelItem => days.WeeklyPickup)

            }*@

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.ActionLink("More Info", "Details", new { id = item.Id })
                @*@Html.ActionLink("More Info", "Edit", new { id = item.Id })*@
            </td>
            <td>
                <input type="checkbox" name="name" value="value"> Mark as Done<br>
            <td />


            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@

        </tr>




    }


</table>
<hr />
@using (Html.BeginForm())
{
    <div class="btn-group-toggle alert-dismissible" data-toggle="buttons">
        <label class="btn btn-secondary active">

            by day: @Html.TextBox("SearchString")


            <input type="submit" name="name" value="Search" />
        </label>
    </div>

}
