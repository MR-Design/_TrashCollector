<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

        <title>@ViewBag.Title  P!K P!K</title>
        @Styles.Render("~/Content/bootstrap.css")
        @Scripts.Render("~/bundles/modernizr")
       
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    </head>
 <body>
    <!--- Navigation -->
    <nav class="navbar navbar-expand-md Pik-bg container-fluid">
        <div class="container-fluid">

            <a class="navbar-brand" href="#">
                <img src="#" alt="">
                @Html.ActionLink("P!K P!K", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                <span class="custom-toggler-icon"><i class="fas fa-bars"></i></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarResponsive">

                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>

                </ul>

                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        @Html.Partial("_LoginPartial")
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!--- End Navigation -->

    @RenderBody()

    <!--- Start Contact Section -->
    <div id="contact" class="offset container-fluid">

        <div class="container-fluid footer">
            <div class="row">

                <div class="col-md-12 text-center">
                    <hr class="socket">
                    <h3>P!K P!K.</h3>
                    <hr class="socket">

                    <p>(646) 416-3900<br>two7city@gmail.com</p>
                    <a href="https://www.facebook.com/MooohammedRD"><i class="fab fa-facebook-square"></i></a>
                    <a href="https://www.linkedin.com/in/mohammed-reda-medhi/"><i class="fab fa-linkedin"></i></a>
                    <a href="https://www.behance.net/Mohamemdreda"><i class="fab fa-behance-square"></i></a>


                    <p>&copy; MOH MEDIA </p>

                </div>



            </div>



        </div> <!--- End Row -->
    </div> <!--- End Container Footer -->




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



    <style>
        /**********************Styling**********************/

        body {
            background-color: #F1F7ED;
            color: #13293D;
        }
        /**********************Nav**********************/

        .Pik-bg {
            background-color: #13293D;
        }

        .navbar-brand,
        .nav-link {
            color: #F1F7ED;
        }

            .nav-link:hover {
                color: #4F7CAC;
            }

        .navbar-toggler {
            cursor: pointer;
            color: #F1F7ED;
        }

        /**********************Footer**********************/
        .footer .row {
            background-color: #4F7CAC;
            padding: 1rem 2rem 3rem;
            color: #F1F7ED;
        }


        .footer a {
            color: #F1F7ED;
        }

        .footer svg.svg-inline--fa {
            margin: 1.2rem .5rem 0 0;
        }

        .footer svg.svg-inline--fa:hover {
                color: #4F7CAC !important;
         }

        .footer h3 {
            text-transform: uppercase;
            margin: 1.5rem 0;
        }


        hr.socket {
            width: 100%;
            border-top: .2rem solid #F1F7ED;
        }
        /**********************End Styling**********************/
    </style>
 </body>
</html>
