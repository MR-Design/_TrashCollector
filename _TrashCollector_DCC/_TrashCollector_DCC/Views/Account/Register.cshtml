@model _TrashCollector_DCC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal container-fluid", role = "form" }))
{

<div class="container-fluid text-center col-md-4">
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group text-center">

        <p class="lead text-center "> Email </p> <br />
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-center" })
    </div>

    <div class="form-group text-center">

        <p class="lead text-center "> Username </p> <br />
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control text-center" })
    </div>
    <div class="form-group text-center">

        <p class="lead text-center "> Password </p> <br />
        @Html.PasswordFor(m => m.Password, new { @class = "form-control text-center" })
    </div>
    <div class="form-group text-center">

        <p class="lead text-center "> Confirm password </p> <br />
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-center" })
    </div>

    <div class="form-group text-center">
        @*@Html.DropDownList("Name")*@
        <p class="lead"> Select Type </p>
        @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, " Select User Roles", htmlAttributes: new { @class = "btn btn-outline-success text-center" })
    </div>

    <div class="form-group text-center">

        <div class="col-md-offset-2 text-center ">
            <input type="submit" class="btn btn-outline-success" value="Register" />
        </div>
    </div>

</div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    <style>

        .padding {
            padding: 3rem 0;
        }

        .narrow {
            width: 85%;
            margin: 0 auto;
            padding-top: 1rem;
        }

        .btn {
            margin-bottom: 5%;
        }
    </style>
